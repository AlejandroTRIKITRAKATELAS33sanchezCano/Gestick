</head>

<body>
    <header>
        <img src="CSS/IMG/Decoraci贸n/Logo.png" alt="GESTICK">
        <input type="checkbox" id="check">
        <label for="check" class="mostrar-menu">
            &#8801
        </label>
        <nav class="menu">
            <a href="index.html" class="iniciolink">Inicio</a>

            <div class="headercontainer">
                <div class="userss">
                    <a href="#" class="profile__cta"><i class="fa-solid fa-circle-user"></i></a>
                </div>
            </div>

            <label for="check" class="esconder-menu">
                &#215
            </label>
        </nav>
    </header>

    <br><br><br><br>

    <h2 id="Titulo-1">PRODUCTOS:</h2>
    <br>
    <h3 id="Titulo-2">Selecciona el producto a vender</h3>

    <div class="buscar">
        <input type="text" placeholder="Busca tu producto" required id="inputbuscar" onkeyup="search_product()"/>

        <div class="btn2">
            <i class="fas fa-search icon"></i>

        </div>
    </div>
    <center>

        <main class="cardscontainer">
            <div class="sell">
                <input type="checkbox" id="btn-modal">
                <label for="btn-modal" class="lbl-modal" onclick="restablecer()">
                    <i class="fa-solid fa-cash-register" id="cajita">
                        <p class="txtcajita">cobrar</p>
                    </i>
                </label>
                <div class="modal">
                    <div class="contenedor">
                        <header>SE AMABLE CON EL CLIENTE :D</header>
                        <label for="btn-modal">X</label>
                        <div class="contenido">
                            <h3> COBRA ESTA CANTIDAD:</h3>
                            <p> 58 VARITOS </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="espaciado">
            </div>

            <%if(table.length> 0){
                table.forEach((row)=>{%>

                <a class="card">

                    <div class="cont-tarjeta__logo">

                        <img src=<%=row.Imagen%> class="articuloIMG" alt="Articulo">

                    </div>

                    <center>
                        <p><span id="Nombre">
                                <%=row.PNombre%>
                            </span></p>
                        <p><span id="PrecioDemanda">$<%=row.Precio%>MX</span></p>
                    </center>
                    <p id="cantidad" class="ceros">0</p>

                    <div class="plus" onclick="cantidadproductos()">
                        <i class="gg-math-plus" id="plus"></i>
                    </div>

                    <div class="less" onclick="cantidadproductosdos()">
                        <i class="gg-math-minus" id="less"></i>
                    </div>

                </a>
                <%})}%>
        </main>
    </center>

    <section class="modal_1">
        <div class="modal__container_1">
            <div class="part_container">
                <img src="CSS/IMG/avatar_male_man_people_person_profile_user_icon_123199.png">
                <h2 class="modal__title" class="modales"><%=nombre%></h2>
            </div>
            <hr>
            <div class="part_container">
                <img src="CSS/IMG/1904675-configuration-edit-gear-options-preferences-setting-settings_122525.png">
                <a href="#" class="profile__cta_2" class="modales">Configuraci贸n</a>
            </div>
            <hr>
            <div class="part_container">
                <img src="CSS/IMG/4115235-exit-logout-sign-out_114030.png">
                <a href="/logOut" class="profile__cta_2" class="modales">Cerrar sesi贸n</a>
            </div>
            <a href="#" class="modal__close_1" class="modales"><img class="modal_img"
                    src="CSS/IMG/cancel_close_delete_exit_logout_remove_x_icon_123217 (1).png"></a>
        </div>
    </section>
    <section class="modal_2">
        <div class="modal__container_2">
            <div class="part_container">
                <img src="CSS/IMG/avatar_male_man_people_person_profile_user_icon_123199.png">
                <h2 class="modal__title" class="modales">Perfil</h2>
            </div>
            <hr>
            <div class="part_container">
                <p class="modal_paragraph"class="modales">Apellido paterno: <%=AP%>
                </p>
            </div>
            <div class="part_container">
                <p class="modal_paragraph" class="modales">Apellido materno: <%=AM%>
                </p>
            </div>
            <div class="part_container">
                <p class="modal_paragraph" class="modales">Nombre(s): <%=nombre%>
                </p>
            </div>
            <div class="part_container">
                <p class="modal_paragraph" class="modales">ID: <%=ID%>
                </p>
            </div>
            <a href="#" class="modal__close_2"><img
                    src="CSS/IMG/arrow_arrows_back_direction_left_navigation_right_icon_123237.png"></a>
        </div>
    </section>

    <script src="JS/Script.js"></script>
    <script src="JS/search.js"></script>
    <script src="JS/main.js"></script>
    <script src="JS/modal_1.js"></script>
    <script src="JS/modal_2.js"></script>

</body>

</html>