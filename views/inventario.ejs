<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="CSS/style.css">
    <link rel="icon" href="CSS/IMG/Decoración/Logo.png">
    <script src="https://kit.fontawesome.com/8042365e74.js" crossorigin="anonymous"></script>
    <title>Inventario</title>
</head>
<body>
    <header>
        <h2 class="logo">GESTICK</h2>
        <input type="checkbox" id="check">
        <label for="check" class="mostrar-menu">
            &#8801
        </label>
        <nav class="menu">
            <a href="/Consulta-Empleados">Empleados</a>
            <a href="/stock">Productos</a>
            <div class="headercontainer">
                <div class="userss">
                    <a href="#" class="profile__cta"><i class="fa-solid fa-circle-user"></i></a>
                </div>
            </div>
            <label for="check" class="esconder-menu">
                &#215
            </label>
        </nav>
    </header>
    <div class="Header-Opciones">

        <h2 class="logo2">Productos</h2>
        <nav class="menu">
            <div class="buscar">
                <input type="text" onkeyup="search_product()" placeholder="Busca tu producto" requiredid="inputbuscar" />
                <div class="btn">
                    <i class="fas fa-search icon2"></i>
                </div>
            </div>
            <a href="Agregar_Producto.html" id="BotonActivo" class="Separado">Agregar Producto</a>
        </nav>
    </div>

    <section class="tabla-escala">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Imagen</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Inventario</th>
                    <th>Marca</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                <%if(table.length > 0){%>
                    <%table.forEach((row)=>{%>
                        <tr>
                            <td data-label="ID"><%=row.idProducto%></td> 
                            <td data-label="Imagen">
                                <img src=<%=row.Imagen%> alt="<%=row.PNombre%>" id="ImagenPP">
                            </td>
                            <td data-label="Nombre"><%=row.PNombre%></td>
                            <td data-label="Descripción"><%=row.Descripcion%> </td>
                            <td data-label="Inventario"><%=row.Existencias%></td>
                            <td data-label="Precio"><%=row.Precio%></td>
                            <td data-label="Marca"><%=row.MNombre%></td>
                            <td data-label="Editar">
                                <div class="producto-texto">
                                    <form action="/modifyProduct" method="post">
                                        <input type="hidden" name="idP" value=<%=row.idProducto%>>
                                        <input type="hidden" name="PNombre" value=<%=row.PNombre%>>
                                        <input type="hidden" name="Descripcion" value=<%=row.Descripcion%>>
                                        <input type="hidden" name="Existencias" value=<%=row.Existencias%>>
                                        <input type="hidden" name="Precio" value=<%=row.Precio%>>
                                        <input type="hidden" name="MNombre" value=<%=row.MNombre%>>
                                        <input type="hidden" name="img" value=<%=row.Imagen%>>
                                        <button type="submit" id="BotonActivo" class="Separado" >Editar Producto</button>
                                    </form>
                                    <form action="/deleteProduct" method="post">
                                        <input type="hidden" name="idP" value=<%=row.idProducto%>>
                                        <button type="submit" id="BotonActivo" class="Separado" >Eliminar Producto</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <%})%>
                <%}else{%>
                    <tr> 
                        <td colspan="3">No hay productos.</td>
                    </tr>
                <%}%>
            </tbody>
        </table>
        <section class="modal_1">
            <div class="modal__container_1">
                <div class="part_container">
                    <img src="CSS/IMG/avatar_male_man_people_person_profile_user_icon_123199.png">
                    <h2 class="modal__title modales"><%=nombre%></h2>
                </div>
                <hr>
                <div class="part_container">
                    <img src="CSS/IMG/1904675-configuration-edit-gear-options-preferences-setting-settings_122525.png">
                    <a href="#" class="profile__cta_2 modales">Configuración</a>
                </div>
                <hr>
                <div class="part_container">
                    <img src="CSS/IMG/4115235-exit-logout-sign-out_114030.png">
                    <a href="/logOut" class="profile__cta_2 modales">Cerrar sesión</a>
                </div>
                <a href="#" class="modal__close_1 modales"><img class="modal_img"
                        src="CSS/IMG/cancel_close_delete_exit_logout_remove_x_icon_123217 (1).png"></a>
            </div>
        </section>
        <section class="modal_2">
            <div class="modal__container_2">
                <div class="part_container">
                    <img src="CSS/IMG/avatar_male_man_people_person_profile_user_icon_123199.png">
                    <h2 class="modal__title">Perfil</h2>
                </div>
                <hr>
                <div class="part_container">
                    <p class="modal_paragraph">Apellido paterno: <span class="modales"><%=AP%></span></p>
                </div>
                <div class="part_container">
                    <p class="modal_paragraph">Apellido materno: <span class="modales"><%=AM%></span></p>
                </div>
                <div class="part_container">
                    <p class="modal_paragraph">Nombre(s): <span class="modales"><%=nombre%></span></p>
                </div>
                <div class="part_container">
                    <p class="modal_paragraph">ID: <span class="modales"><%=ID%></span></p>
                </div>
                <a href="#" class="modal__close_2"><img
                        src="CSS/IMG/arrow_arrows_back_direction_left_navigation_right_icon_123237.png"></a>
            </div>
        </section>
        <script src="JS/modal_1.js"></script>
        <script src="JS/modal_2.js"></script>
</body>

</html>